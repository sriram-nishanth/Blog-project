<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="style/main.css" rel="stylesheet">
</head>
<body id="bg">

    <div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center">
        <!-- Page Title -->
        <h1 class="mb-4 text-center"><img class="m-2" src="src/substack.svg" alt=icon height="28px">Blog Website</h1>

        <!-- Blog Post Form -->
        <div id="img" class="card shadow-lg p-4 w-50">
            <h3 class="text-center mb-3">Create a Post</h3>
            <form action="/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" id="name" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <label for="post" class="form-label">Enter Your Blog</label>
                    <textarea name="content" class="form-control" id="post" rows="4" required></textarea>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary px-4" type="submit">Submit</button>
                </div>
            </form>
        </div>

        <!-- All Posts Section -->
        <div class="mt-5 w-75">
            <h2 class="text-center">All Posts</h2>
            <% if (posts.length === 0) { %>
                <p class="text-center text-muted">No posts yet.</p>
            <% } else { %>
                <% posts.forEach(post => { %>
                    <div id="form" class="card shadow-sm p-3 my-3">
                        <h4 class="mb-2"><%= post.title %></h4>
                        <p><%= post.content %></p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/edit/<%= post.id %>" class="btn btn-warning"><img class="m-2" src="src/pencil-square.svg" alt="edit" height="20">Edit</a>
                            <form action="/delete/<%= post.id %>" method="POST">
                                <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure?')"><img class="m-2" src="src/trash-fill.svg" alt="delete" height="20">Delete</button>
                            </form>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

</body>
</html>
